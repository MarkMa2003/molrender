{
  "name": "molrender",
  "version": "0.4.0",
  "description": "Create macromolecular images.",
  "homepage": "https://github.com/molstar/molrender#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/molstar/molrender.git"
  },
  "bugs": {
    "url": "https://github.com/molstar/molrender/issues"
  },
  "scripts": {
    "test": "npm run lint",
    "lint": "eslint ./**/*.ts",
    "build": "npm run build-tsc && npm run build-webpack",
    "build-tsc": "tsc",
    "build-webpack": "webpack --mode production",
    "watch": "concurrently --kill-others \"npm:watch-tsc\" \"npm:watch-webpack\"",
    "watch-tsc": "tsc -watch",
    "watch-webpack": "webpack -w --mode development --display minimal",
    "preversion": "npm run test",
    "postversion": "git push && git push --tags",
    "prepublishOnly": "npm run test && npm run build"
  },
  "bin": {
    "molrender": "build/bin/molrender.js"
  },
  "files": [
    "build/bin/molrender.js"
  ],
  "author": "Mol* Contributors",
  "license": "MIT",
  "devDependencies": {
    "@types/argparse": "^1.0.38",
    "@types/gl": "^4.1.0",
    "@types/node": "^14.0.5",
    "@types/pngjs": "^3.4.2",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "^5.2.0",
    "eslint": "^7.0.0",
    "molstar": "^1.0.4",
    "typescript": "^3.9.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {
    "argparse": "^1.0.10",
    "gl": "^4.5.0",
    "jpeg-js": "^0.4.0",
    "pngjs": "^3.4.0",
    "util.promisify": "^1.0.1"
  }
}
